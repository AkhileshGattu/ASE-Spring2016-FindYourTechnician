<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hp.findyourtechnician.UserLogin"
    tools:showIn="@layout/activity_user_login">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Login"
        android:id="@+id/Login"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="USERNAME"
        android:id="@+id/LoginContent_UserNameTextView"
        android:layout_alignBottom="@+id/LoginContent_UserNameTextField"
        android:layout_alignRight="@+id/LoginContent_PasswordTextView"
        android:layout_alignEnd="@+id/LoginContent_PasswordTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PASSWORD"
        android:id="@+id/LoginContent_PasswordTextView"
        android:layout_below="@+id/LoginContent_UserNameTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/LoginContent_LoginButton"
        android:layout_marginTop="74dp"
        android:layout_below="@+id/LoginContent_PasswordTextField"
        android:layout_toRightOf="@+id/Login"
        android:layout_toEndOf="@+id/Login" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/LoginContent_UserNameTextField"
        android:layout_below="@+id/Login"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="59dp"
        android:layout_alignLeft="@+id/Login"
        android:layout_alignStart="@+id/Login" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/LoginContent_PasswordTextField"
        android:layout_alignTop="@+id/LoginContent_PasswordTextView"
        android:layout_alignLeft="@+id/LoginContent_UserNameTextField"
        android:layout_alignStart="@+id/LoginContent_UserNameTextField" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Are you a new user?"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/LoginContent_LoginButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#2388fc"
        android:textColorLink="#f90505"
        android:textIsSelectable="true"
        android:textSize="20dp" />

</RelativeLayout>
